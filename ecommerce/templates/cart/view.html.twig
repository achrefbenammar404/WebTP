{% extends 'base.html.twig' %}

{% block title %}Shopping Cart{% endblock %}

{% block body %}
<h1>Your Shopping Cart</h1>

{% if cart|length > 0 %}
    <ul>
        {% for item in cart %}
            <li>
                {{ item.product.name }} - {{ item.quantity }} - ${{ item.product.price }}
            </li>
        {% endfor %}
    </ul>
    <a href="{{ path('checkout') }}">Proceed to Checkout</a>
{% else %}
    <p>Your cart is empty.</p>
{% endif %}
{% endblock %}
